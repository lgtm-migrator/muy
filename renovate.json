{
  "extends": [
    "config:base"
  ],
  "assignees": ["jimmyandrade"],
  "automerge": false,
  "enabled": true,
  "labels": ["dependencies", "renovate"],
  "packageRules": [
    {
      "paths": ["package.json"],
      "labels": ["dependencies", "renovate", "root package"]
    },
    {
      "paths": ["packages/gatsby-plugin-metax/package.json"],
      "labels": ["dependencies", "gatsby plugin", "metax", "renovate"]
    },
    {
      "paths": ["packages/metax/package.json"],
      "labels": ["dependencies", "metax", "renovate"]
    },
    {
      "paths": ["packages/muy/package.json"],
      "labels": ["dependencies", "muy", "renovate"]
    },
    {
      "paths": ["packages/styles/package.json"],
      "labels": ["dependencies", "renovate", "styles"]
    },
    {
      "paths": ["packages/themes/package.json"],
      "labels": ["dependencies", "renovate", "themes"]
    }
  ],
  "schedule": "every weekend",
  "semanticCommits": true,
  "unicodeEmoji": true,
  "updateLockFiles": true
}
